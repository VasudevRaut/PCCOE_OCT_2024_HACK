<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- EditText for entering prescription -->
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uplode Documents"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Prescription"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="4"
        android:background="@drawable/edittext_background2"
        android:padding="10dp"
        android:layout_marginBottom="20dp" />

    <!-- Button for uploading an image -->
    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image" />

    <!-- ImageView to show the uploaded image -->
    <ImageView
        android:id="@+id/uploadedImageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Button for uploading a PDF -->
    <Button
        android:id="@+id/buttonUploadPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload PDF"
        android:layout_marginBottom="20dp" />

    <!-- TextView to show the uploaded PDF file name -->
    <TextView
        android:id="@+id/pdfFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No PDF Uploaded"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Share"/>
        </LinearLayout>
    </ScrollView>





</LinearLayout>
